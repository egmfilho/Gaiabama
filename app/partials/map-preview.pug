div(ng-non-bindable)
	.custom-infowindow
		.scroll-content
			.preview(ng-repeat='n in card track by $index')
				
				.thumb(style='background-image: url("{{ n.picture }}")')
				
				.description
					.title {{ n.title | truncate: 25 }}
				
					.text.text-gray
						| {{ n.description | truncate: 150 }}

						.icons
							span(name='icon' data-toggle='tooltip' data-placement='top' title='{{n.area}} m2' ng-if='n.area && n.area > 0')
								| {{n.area}}&nbsp;
								b m&#178;

							span(name='icon' data-toggle='tooltip' data-placement='top' title='{{n.bed}} dormitórios' ng-if='n.bed && n.bed > 0')
								| {{n.bed}}&nbsp;
								i.fa.fa-bed

							span(name='icon' data-toggle='tooltip' data-placement='top' title='{{n.suite}} suítes' ng-if='n.suite && n.suite > 0')
								| {{n.suite}}&nbsp;
								i.fa.fa-bathtub

							span(name='icon' data-toggle='tooltip' data-placement='top' title='{{n.bath}} banheiros' ng-if='n.bath && n.bath > 0')
								| {{n.bath}}&nbsp;
								i.fa.fa-shower

							span(name='icon' data-toggle='tooltip' data-placement='top' title='{{n.parking}} vagas' ng-if='n.parking && n.parking > 0')
								| {{n.parking}}&nbsp;
								i.fa.fa-car

					a.btn.btn-block.btn-primary(ng-href='{{ n.url }}') Detalhes